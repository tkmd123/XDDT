<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <property name="now" value="now()" dbms="h2"/>

    <property name="now" value="now()" dbms="mysql"/>
    <property name="autoIncrement" value="true"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle, mssql"/>

    <!--
        Added the entity PCR.
    -->
    <changeSet id="20181201030033-1" author="jhipster">
        <createTable tableName="pcr">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="ma_pcr" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="thoi_gian_thuc_hien" type="datetime">
                <constraints nullable="true" />
            </column>

            <column name="nhan_xet" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="thoi_gian_bat_dau" type="datetime">
                <constraints nullable="true" />
            </column>

            <column name="cong_suat_bat_dau" type="${floatType}">
                <constraints nullable="true" />
            </column>

            <column name="cuong_do_bat_dau" type="${floatType}">
                <constraints nullable="true" />
            </column>

            <column name="dien_the_bat_dau" type="${floatType}">
                <constraints nullable="true" />
            </column>

            <column name="thoi_gian_ket_thuc" type="datetime">
                <constraints nullable="true" />
            </column>

            <column name="cong_suat_ket_thuc" type="${floatType}">
                <constraints nullable="true" />
            </column>

            <column name="cuong_do_ket_thuc" type="${floatType}">
                <constraints nullable="true" />
            </column>

            <column name="dien_the_ket_thuc" type="${floatType}">
                <constraints nullable="true" />
            </column>

            <column name="is_deleted" type="bit">
                <constraints nullable="true" />
            </column>

            <column name="udf_1" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="udf_2" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="udf_3" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="udf_4" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="udf_5" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="maypcr_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <column name="nhan_vienpcr_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove-->
        </createTable>
        <dropDefaultValue tableName="pcr" columnName="thoi_gian_thuc_hien" columnDataType="datetime"/>
        <dropDefaultValue tableName="pcr" columnName="thoi_gian_bat_dau" columnDataType="datetime"/>
        <dropDefaultValue tableName="pcr" columnName="thoi_gian_ket_thuc" columnDataType="datetime"/>
        
    </changeSet>
    
    <!-- Added the entity audit columns -->
    <changeSet id="20181201031100-audit-1" author="jhipster-entity-audit">
        <addColumn tableName="pcr">
            <column name="created_by" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="timestamp" defaultValueDate="${now}">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_by" type="varchar(50)"/>
            <column name="last_modified_date" type="timestamp"/>
        </addColumn>
    </changeSet>
    <!-- jhipster-needle-liquibase-add-changeset - JHipster will add changesets here, do not remove-->
</databaseChangeLog>
